{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "."
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
